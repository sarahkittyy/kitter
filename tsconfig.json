{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "build",
		"plugins": [
			{
				"name": "typescript-tslint-plugin"
			}
		]
	},
	"exclude": [
		"node_modules",
		"src/frontend"
	],
	"include": [
		"src/backend"
	]
}